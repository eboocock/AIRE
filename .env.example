# AIRE - AI Real Estate Platform
# Environment Variables Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE (Required)
# ===========================================
# Get these from your Supabase project settings
# https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# PROPERTY DATA APIs
# ===========================================

# RapidAPI Key (for Realty Mole, Zillow APIs)
# Sign up at: https://rapidapi.com/
RAPIDAPI_KEY=your_rapidapi_key

# ATTOM Data API (alternative/additional property data)
# Sign up at: https://api.gateway.attomdata.com/
ATTOM_API_KEY=your_attom_api_key

# ===========================================
# GOOGLE APIS
# ===========================================

# Google Places API (for address autocomplete)
# Enable in Google Cloud Console: Places API, Geocoding API
GOOGLE_PLACES_API_KEY=your_google_places_key

# Google OAuth (optional - for social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# STRIPE (Payments)
# ===========================================
# Get from https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Pricing
STRIPE_LISTING_FEE_PRICE_ID=price_...  # $499 listing fee

# ===========================================
# AI APIS (for listing descriptions)
# ===========================================

# Anthropic Claude (recommended)
ANTHROPIC_API_KEY=your_anthropic_key

# OpenAI (fallback)
OPENAI_API_KEY=your_openai_key

# ===========================================
# ADDITIONAL SERVICES
# ===========================================

# Walk Score API
WALKSCORE_API_KEY=your_walkscore_key

# DocuSign (for e-signatures)
DOCUSIGN_INTEGRATION_KEY=your_docusign_key
DOCUSIGN_USER_ID=your_docusign_user_id
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id

# SendGrid (for emails)
SENDGRID_API_KEY=your_sendgrid_key
EMAIL_FROM=noreply@aire.com

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# APP CONFIGURATION
# ===========================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AIRE

# Feature flags
NEXT_PUBLIC_ENABLE_AI_DESCRIPTIONS=true
NEXT_PUBLIC_ENABLE_E_SIGNATURES=false
